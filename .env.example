# =============================================================================
# Apache Superset Environment Variables
# Copy this file to .env and update values for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# SECURITY (REQUIRED)
# -----------------------------------------------------------------------------

# Flask secret key - MUST be changed in production!
# Generate with: openssl rand -base64 42
SECRET_KEY=CHANGE_ME_TO_A_COMPLEX_RANDOM_SECRET

# -----------------------------------------------------------------------------
# DATABASE (Local Development)
# -----------------------------------------------------------------------------

# PostgreSQL settings for local docker-compose
POSTGRES_USER=superset
POSTGRES_PASSWORD=superset
POSTGRES_DB=superset
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# DATABASE (Railway Production)
# -----------------------------------------------------------------------------

# Railway automatically provides DATABASE_URL when you add PostgreSQL
# DATABASE_URL=postgresql://user:password@host:port/database

# -----------------------------------------------------------------------------
# REDIS (Local Development)
# -----------------------------------------------------------------------------

REDIS_HOST=redis
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# REDIS (Railway Production)
# -----------------------------------------------------------------------------

# Railway automatically provides REDIS_URL when you add Redis
# REDIS_URL=redis://default:password@host:port

# -----------------------------------------------------------------------------
# ADMIN USER
# -----------------------------------------------------------------------------

SUPERSET_ADMIN_USERNAME=admin
SUPERSET_ADMIN_PASSWORD=admin
SUPERSET_ADMIN_EMAIL=admin@example.com

# -----------------------------------------------------------------------------
# OPTIONAL SETTINGS
# -----------------------------------------------------------------------------

# Load example dashboards and data (true/false)
SUPERSET_LOAD_EXAMPLES=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Secure cookies (set to false for local HTTP development)
SESSION_COOKIE_SECURE=true

# Port (Railway sets this automatically)
PORT=8088

# Web protocol
SUPERSET_WEBSERVER_PROTOCOL=https
